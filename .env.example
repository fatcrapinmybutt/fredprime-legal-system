# Development Environment Template
# Copy to .env and customize for your environment

# Python Environment
PYTHON_ENV=development
PYTHONUNBUFFERED=1

# Debugging
DEBUG=False
LOG_LEVEL=INFO
VERBOSE=False

# Testing
TEST_MODE=False
PYTEST_ARGS=-v --tb=short

# Code Quality
ENFORCE_STRICT=0
ENFORCE_WARNINGS=1

# Application Settings
APP_NAME=fredprime-legal-system
APP_VERSION=1.0.0

# File Paths
PROJECT_ROOT=./
DATA_DIR=./data
DOCUMENTS_DIR=./documents
OUTPUT_DIR=./output
LOGS_DIR=./logs

# Legal System Configuration
COURT_SYSTEM=michigan
DOCUMENT_TEMPLATE_PATH=./forms
FORMS_MANIFEST=./data/forms_manifest.json

# Feature Flags
ENABLE_DOCUMENT_VALIDATION=True
ENABLE_TIMELINE_ANALYSIS=True
ENABLE_EVIDENCE_TRACKING=True

# Performance
MAX_FILE_SIZE=10485760  # 10MB in bytes
CACHE_ENABLED=True
CACHE_TTL=3600

# API Configuration (if needed)
API_TIMEOUT=30
API_RETRY_COUNT=3

# Logging
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=./logs/app.log

# Development Tools
PRE_COMMIT_SKIP=False
SKIP_GIT_HOOKS=False

# External Services (if any)
# API_KEY=your_api_key_here
# SERVICE_URL=http://localhost:8000

# Documentation
DOCS_BUILD_DIR=./docs/_build
SPHINX_AUTOBUILD=False
