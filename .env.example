# FRED Supreme Litigation OS Configuration
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=FRED Supreme Litigation OS
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development

# Paths (relative to project root)
PROJECT_ROOT=.
DATA_DIR=data
DOCUMENTS_DIR=documents
OUTPUT_DIR=output
LOGS_DIR=logs

# Feature Flags
ENABLE_DOCUMENT_VALIDATION=true
ENABLE_TIMELINE_ANALYSIS=true
ENABLE_EVIDENCE_TRACKING=true
ENABLE_API=true

# Performance
MAX_FILE_SIZE=10485760
CACHE_ENABLED=true
CACHE_TTL=3600

# Sub-configurations
LOGGING__LEVEL=INFO
LOGGING__FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOGGING__FILE=
LOGGING__MAX_BYTES=10485760
LOGGING__BACKUP_COUNT=5

DATABASE__URL=sqlite:///litigation.db
DATABASE__ECHO=false
DATABASE__POOL_SIZE=10
DATABASE__MAX_OVERFLOW=20

CACHE__ENABLED=true
CACHE__TTL=3600
CACHE__MAX_SIZE=1000
CACHE__BACKEND=memory

SECURITY__API_KEY_HEADER=X-API-Key
SECURITY__REQUIRE_SSL=false
SECURITY__SECRET_KEY=your-secret-key-here

# Legal System
COURT_SYSTEM=michigan
DOCUMENT_TEMPLATE_PATH=forms
FORMS_MANIFEST=data/forms_manifest.json

# External Services (if any)
# API_KEY=your-openai-api-key-here
# SERVICE_URL=http://localhost:8000

# Development Tools
PRE_COMMIT_SKIP=False
SKIP_GIT_HOOKS=False

# Documentation
DOCS_BUILD_DIR=./docs/_build
SPHINX_AUTOBUILD=False
